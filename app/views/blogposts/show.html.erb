<div class="post">
  <h2><%= @blogpost.title %></h2>
  <p>
    <%= @blogpost.content %>
  </p>
</div>
<div>
<% if @blogpost.id > 1 %>
<span class="previous">
  <%= link_to "Previous", blogpost_path(@blogpost.id - 1) %>
</span>
<% end %>
<% if @blogpost.id != Blogpost.last.id %>
<span class="next">
<%= link_to "Next", blogpost_path(@blogpost.id + 1) %>
</span>
<% end %>
</div>
