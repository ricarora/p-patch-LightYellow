<%= form_for @blogpost, {class: "form-horizontal", role: "form"} do |f| %>
<div class="form-group">
  <%= f.label :title, "Title", {class: "col-sm-2 control-label"} %>
  <%= f.text_field :title, {class: "col-sm-10"} %>
</div>
<div class="form-group">
  <%= f.label :content, "Content", {class: "col-sm-2 control-label"} %>
  <%= f.text_area :content, {class: "col-sm-10"} %>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit %>
  </div>
</div>
<% end %>
